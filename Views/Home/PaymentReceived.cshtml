@{
    ViewData["Title"] = "Home Page";
}
<style>
    .card {
        max-width: 400px;
        margin: 50px auto;
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #28a745;
        color: white;
        text-align: center;
        font-size: 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .card-body {
        text-align: center;
        padding: 30px;
    }

        .card-body i {
            font-size: 3rem;
            color: #28a745;
            margin-bottom: 20px;
        }

        .card-body h5 {
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .card-body p {
            font-size: 1rem;
            color: #555;
        }

    .btn-primary {
        background-color: #28a745;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #218838;
        }
</style>

<div class="card">
    <div class="card-header">
        Payment Successful
    </div>
    <div class="card-body">
        <i class="fas fa-check-circle"></i>
        <h5 class="card-title">Thank You!</h5>
        <p class="card-text">Your PesaPal payment has been successfully processed. You will receive a confirmation email shortly.</p>
        <a href="https://panafricanburns.com/home/PaymentReceived" class="btn btn-success">Continue</a>
    </div>
</div>

<!-- JavaScript to Set Payment URL -->






